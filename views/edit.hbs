{{#unless error}}
<div class="bg-body-tertiary p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="name" class="form-label">Nome completo</label>
                <input type="hidden" value="{{id}}" name="id">
                <input value="{{name}}" type="text" class="form-control" id="name" name="name"
                    placeholder="Digite seu nome" required>
            </div>
            <div class="col-md-5 mb-3">
                <label for="email" class="form-label">Endereço de email</label>
                <input value="{{email}}" type="email" class="form-control" id="email" name="email"
                    placeholder="Digite seu email" required>
            </div>
            <div class="col-md-2">
                <button class="mt-3 p-3 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problem}}
    </div>
</div>
{{/unless}}